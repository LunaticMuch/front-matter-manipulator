{
  "name": "front-matter-manipulator",
  "version": "0.1.2",
  "description": "A utility for parsing and manipulating documents with Front Matter",
  "directories": {
    "lib": "lib"
  },
  "main": "./lib/index.js",
  "bin": "./lib/cli.js",
  "scripts": {
    "test": "jest --runInBand",
    "docs": "npm run docs:cli && npm run docs:scripts",
    "docs:cli": "documentation build ./lib/commands/*.js -f md --shallow -o docs/cli.md --sort-order alpha",
    "docs:scripts": "documentation build ./lib/core/*.js -f md --shallow -o docs/scripts.md --sort-order alpha",
    "precommit": "npm test",
    "prepush": "npm test"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "async": "^3.2.4",
    "chalk": "^4.1.2",
    "cli-spinner": "^0.2.7",
    "deepmerge": "^4.2.2",
    "documentation": "^13.2.5",
    "flat": "^5.0.2",
    "glob": "^8.0.3",
    "gray-matter": "^4.0.3",
    "jest": "^28.1.3",
    "lodash": "^4.17.4",
    "simple-autoloader": "^0.2.0",
    "toml-js": "0.0.8",
    "yamljs": "^0.3.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "husky": "^8.0.1"
  },
  "jest": {
    "verbose": true,
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    }
  }
}
